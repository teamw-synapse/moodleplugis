<div class="tab-pane fade active show" id="v-pills-reports" role="tabpanel" aria-labelledby="v-pills-reports-tab">
        
            <div class="col-md-4">
              <!-- Select Chart Type -->
              <h5>Courses Data</h5>
              <div class="form-group">
                <label for="chart-select1">Select Chart Type:</label>
                <select class="form-control" id="chart-select1">
                  <option value="pie">Pie Chart</option>
                  <option value="bar">Bar Chart</option>
                </select>
              </div>

              <!-- Pie Chart -->
              <div class="chart-container" id="pie-chart-container1">
                <canvas id="pie-chart1"></canvas>
              </div>

              <!-- Bar Chart -->
              <div class="chart-container" id="bar-chart-container1">
                <canvas id="bar-chart1"></canvas>
              </div>

              <!-- Table -->
              <div class="table-container">
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>Course</th>
                      <th>Grade</th>
                    </tr>
                  </thead>
                  <tbody>
                  {{#records}}
                    <tr>
                      <td>{{coursename}}</td>
                      <td>{{grade}}</td>
                    </tr>
                  {{/records}}
                  </tbody>
                </table>
              </div>
            </div>
        
            <div class="col-md-4">
            <h5>Assesments Data</h5>
              <!-- Select Chart Type -->
              <div class="form-group">
                <label for="chart-select2">Select Chart Type:</label>
                <select class="form-control" id="chart-select2">
                  <option value="pie">Pie Chart</option>
                  <option value="bar">Bar Chart</option>
                </select>
              </div>

              <!-- Pie Chart -->
              <div class="chart-container" id="pie-chart-container2">
                <canvas id="pie-chart2"></canvas>
              </div>

              <!-- Bar Chart -->
              <div class="chart-container" id="bar-chart-container2">
                <canvas id="bar-chart2"></canvas>
              </div>

              <!-- Table -->
              <div class="table-container">
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>Assesments</th>
                      <th>Grade</th>
                    </tr>
                  </thead>
                  <tbody>
                  {{#assesments}}
                    <tr>
                      <td>{{assesmentname}}</td>
                      <td>{{grade}}</td>
                    </tr>
                  {{/assesments}}
                  </tbody>
                </table>
              </div>
            </div>

        
            <div class="col-md-4">
              <!-- Select Chart Type -->
              <h5>Exams Data</h5>
              <div class="form-group">
                <label for="chart-select3">Select Chart Type:</label>
                <select class="form-control" id="chart-select3">
                  <option value="pie">Pie Chart</option>
